{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["discord_webhook_url", "yt_subscriptions"],
    "properties": {
      "discord_webhook_url": {
        "type": "string",
        "format": "uri",
        "description": "Discord webhook URL"
      },
      "yt_subscriptions": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["yt_channel_id", "greetingText"],
          "properties": {
            "yt_channel_id": {
              "type": "string",
              "description": "YouTube channel ID"
            },
            "greetingText": {
              "type": "string",
              "description": "Message sent when a new video is published"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
}
